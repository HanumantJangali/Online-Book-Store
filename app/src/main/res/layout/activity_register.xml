<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:alpha="0.9"
    android:background="@drawable/loginbackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/onlinebooks"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_textview"
        android:cursorVisible="true"
        android:drawableRight="@drawable/username"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Enter username"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textColor="#FFFBF6"
        android:textColorHint="#000"

        android:textCursorDrawable="@null"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_textview"
        android:cursorVisible="true"
        android:drawableRight="@drawable/email"
        android:drawablePadding="10dp"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Enter your Email"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textColor="#FFFBF6"
        android:textColorHint="#000"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_textview"
        android:cursorVisible="true"
        android:drawableRight="@drawable/password"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Enter password"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#FFFBF6"
        android:textColorHint="#000"

        android:textCursorDrawable="@null"
        android:textSize="20dp" />
<!--
    <Spinner
        android:id="@+id/selectPhase1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="150dp"
        android:background ="@drawable/round_butt1"
        android:autofillHints="Select Phase"
        android:spinnerMode="dropdown"
        android:contextClickable="true"
        android:textAlignment="center"

        android:textStyle="bold"/>
-->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/round_butt2"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"   
        android:layout_marginTop="490dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="Already have an Account??!! go to SignIn"
        android:textAlignment="center"
        android:textColor="#EAFB02"
        android:textSize="15dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/round_butt"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold" />


</RelativeLayout>